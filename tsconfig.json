{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "lib",
    "skipLibCheck": false,
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*"]
}
